                        <tbody>
                            <tr>
                                <td>
                                    <a href="ProjectDetails.html"> Demo Project 1 </a> <span class="badge badge-pill badge-success"> Owner </span>
                                </td>
                                <td class="text-center"><i class="fas fa-users td-icon"></i> 50</td>
