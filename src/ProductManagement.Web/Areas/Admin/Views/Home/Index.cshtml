                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

@section Scripts{
    <!--Datatable-->
    <script src="~/Admins/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Admins/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

    <script>
        $(function () {
            $('#projects').DataTable({});
        });
