@{
    ViewData["Title"] = "Dashboard";
}
@section Styles{
    <!--Datatables-->
    <link rel="stylesheet" href="~/Admins/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="dashboard" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">Roll</th>
                            <th class="text-center">User</th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Date of Birth</th>
                            <th class="text-center">Permanent District</th>
                            <th class="text-center">Quota</th>
                            <th class="text-center">Bar Code</th>
                            <th class="text-center">Price</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>


@section Scripts
    {
    <!-- DataTables -->
    <script src="~/admins/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/admins/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

    <script>
        $(function () {
            $('#dashboard').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/admin/home/GetDashBoardData",
                },
                "columnDefs": [
                    { "className": "dt-center", "targets": "_all" }
                ],
                "oLanguage": {
                    "sSearch": "<b>Search By Roll:</b>"
                }
            });
        });
    </script>
}
